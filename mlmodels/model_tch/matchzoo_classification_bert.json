{
    "train": {
        "model_pars": {
            "task": "classification",
            "num_classes": 2,
            "metrics": {"acc" : {}},
            "model": "BERT",
            "params" : {
                "mode": "bert-base-uncased",
                "dropout_rate": 0.2
            }
        },
        "data_pars" :{
            "dataset": "WIKI_QA",
            "data_path": "dataset/nlp/",
            "preprocess" : {
                "train" : {
                    "transform" : true,
                    "mode" : "point",
                    "batch_size" : 20,
                    "stage" : "train",
                    "sort" : false,
                    "dataloader_callback" : "PADDING"
                },
                "test" : {
                    "transform" : true,
                    "mode" : "point",
                    "batch_size" : 20,
                    "stage" : "dev",
                    "sort" : false,
                    "dataloader_callback" : "PADDING"
                }
            }
        },
        "compute_pars": {
            "optimizer" : {
                "ADAMW" : {
                    "lr": 5e-5,
                    "beta1": 0.9,
                    "beta2": 0.98,
                    "eps": 1e-8
                }
            },
            "optimize_parameters" : true,
            "epochs": 10
        },

        "out_pars": {
            "checkpointdir": "ztest/model_tch/MATCHZOO/BERT/checkpoints/",
            "path": "ztest/model_tch/MATCHZOO/BERT/"
        }
    },

    "prod": {
        "model_pars": {},
        "data_pars": {}
    }
}


