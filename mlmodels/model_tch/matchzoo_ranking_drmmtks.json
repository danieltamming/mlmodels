{
    "train": {
        "model_pars": {
            "task": "ranking",
            "loss" : {
                "RankHingeLoss" : {}
            },
            "metrics": {
                "NormalizedDiscountedCumulativeGain" : {"k" : 3}, 
                "NormalizedDiscountedCumulativeGain" : {"k" : 5},
                "MeanAveragePrecision" : {}
            },
            "model": "DRMMTKS",
            "params" : {
                "glove_embedding_matrix_dim" : 100,
                "mask_value" : 0,
                "top_k" : 10,
                "mlp_activation_func" : "tanh"
            }  
        },
        "data_pars" :{
            "num_classes": 2,
            "dataset": "WIKI_QA",
            "data_path": "dataset/nlp/",
            "preprocess": {
                "basic_preprocessor" : {
                    "truncated_length_left" : 10,
                    "truncated_length_right" : 100,
                    "filter_low_freq" : 2
                },
                "train" : {
                    "fit_transform" : true,
                    "mode" : "pair",
                    "num_dup" : 2,
                    "num_neg" : 1,
                    "batch_size" : 20,
                    "stage" : "train",
                    "resample" : true,
                    "sort" : false,
                    "dataloader_callback" : "PADDING"
                },
                "test" : {
                    "transform" : true,
                    "filter" : true,
                    "batch_size" : 20,
                    "stage" : "dev",
                    "dataloader_callback" : "PADDING"
                }
            }
        },
        "compute_pars": {
            "optimizer": {
                "ADADELTA" : {
                    "lr" : 1.0,
                    "rho" : 0.9,
                    "eps" : 1e-06,
                    "weight_decay" : 0.0
                }
            },
            "epochs": 10
        },
        "out_pars": {
            "checkpointdir": "ztest/model_tch/MATCHZOO/BERT/checkpoints/",
            "path": "ztest/model_tch/MATCHZOO/BERT/"
        }
    },

    "prod": {
        "model_pars": {},
        "data_pars": {}
    }
}
